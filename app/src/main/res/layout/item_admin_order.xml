<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="15dp"
    android:backgroundTint="@color/white_order"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Организация Хакатона"
            android:textAlignment="center"
            android:textColor="@color/blue_btn"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@color/blue_btn"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/txt_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Организовать двухдневный Хакатон в СурГУ"
            android:textAlignment="center"
            android:textColor="@color/blue_btn"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginTop="10dp"/>


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@color/blue_btn"
            app:layout_constraintTop_toBottomOf="@+id/txt_goal"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/txt_grade_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Оценка Эксперта 1:"
            android:textAlignment="center"
            android:textColor="@color/blue_btn"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <LinearLayout
            android:id="@+id/layout_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_grade_title"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_criteria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Опыт в организации мероприятий"
                    android:textColor="@color/blue_btn"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#FF9200"
                    android:text="4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_criteria" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_criteria2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Квалификация сотрудников"
                    android:textColor="@color/blue_btn"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#FF9200"
                    android:text="4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_criteria2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_criteria3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Цена"
                    android:textColor="@color/blue_btn"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#FF9200"
                    android:text="4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_criteria3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF9200"
                    android:text="Итого: 4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Ответить на преложение"
                    android:textAlignment="center"
                    android:textColor="@color/blue_btn"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/materialButton" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@color/blue_btn"
            app:layout_constraintTop_toBottomOf="@+id/layout_first"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/txt_grade_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Оценка Эксперта 2:"
            android:textAlignment="center"
            android:textColor="@color/blue_btn"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <LinearLayout
            android:id="@+id/layout_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_grade_title2"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_criteria4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Опыт в организации мероприятий"
                    android:textColor="@color/blue_btn"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#FF9200"
                    android:text="4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_criteria4" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_criteria5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Квалификация сотрудников"
                    android:textColor="@color/blue_btn"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#FF9200"
                    android:text="4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_criteria5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt_criteria6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Цена"
                    android:textColor="@color/blue_btn"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:backgroundTint="#FF9200"
                    android:text="4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_criteria6" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF9200"
                    android:text="Итого: 4.4"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Ответить на преложение"
                    android:textAlignment="center"
                    android:textColor="@color/blue_btn"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/materialButton2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>